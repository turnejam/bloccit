<h2>Sign Up Confirmation</h2>

<div class="row">
  <div class='col-md-4'>
    <h3>Are you sure these values are correct?</h3>
    <p> Email: <%= @user.email %> </p>
    <p> Name: <%= @user.name %> </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.to_unsafe_h}, class: 'btn btn-success' %>
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-danger' %>
  </div>
</div>
